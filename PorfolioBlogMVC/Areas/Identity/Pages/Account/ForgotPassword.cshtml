@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/forgotPassword.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
</head>
<body>
<div class="forgot-password-container">
    <div class="forgot-password-card">
        <div class="forgot-password-header">
            <div class="forgot-password-icon">
                <i class="fas fa-key"></i>
            </div>
            <h1 class="forgot-password-title">Mot de passe oublié ?</h1>
            <p class="forgot-password-subtitle">
                Pas de problème. Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot
                de passe.
            </p>
        </div>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="alert-custom alert-danger-custom" role="alert"></div>

            <div class="form-group-custom">
                <input asp-for="Input.Email"
                       class="form-control-custom"
                       autocomplete="username"
                       aria-required="true"
                       placeholder="votre@email.com"
                       type="email"/>
                <i class="fas fa-envelope input-icon"></i>
                <span asp-validation-for="Input.Email" class="validation-message"></span>
            </div>

            <button type="submit" class="btn-reset">
                <i class="fas fa-paper-plane"></i> Envoyer le lien
            </button>
        </form>

        <div class="back-to-login">
            <a asp-page="./Login">
                <i class="fas fa-arrow-left"></i> Retour à la connexion
            </a>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial"/>
<script src="~/js/forgotPassword.js"></script>
</body>
</html>