@page
@model LoginModel

@{
    ViewData["Title"] = "Connexion";
}

@section Styles {
    <link rel="stylesheet" href="~/css/loginForm.css"/>
}

<div class="login-container">
    <div class="login-wrapper">
        <div class="login-form-section">
            <h1 class="login-title">Bon retour</h1>
            <p class="login-subtitle">Veuillez saisir vos identifiants pour continuer</p>

            <section>
                <form id="account" method="post">
                    @if (ViewData.ModelState.ErrorCount > 0)
                    {
                        <div asp-validation-summary="ModelOnly" class="alert-danger-custom" role="alert"></div>
                    }

                    <div class="form-group">
                        <div class="form-floating-custom">
                            <input asp-for="Input.Email"
                                   class="form-control-custom"
                                   autocomplete="username"
                                   aria-required="true"
                                   placeholder="nom@exemple.com"/>
                            <label asp-for="Input.Email" class="form-label-custom">Email</label>
                            <span asp-validation-for="Input.Email" class="validation-error"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-floating-custom">
                            <input asp-for="Input.Password"
                                   class="form-control-custom"
                                   autocomplete="current-password"
                                   aria-required="true"
                                   placeholder="mot de passe"/>
                            <label asp-for="Input.Password" class="form-label-custom">Mot de passe</label>
                            <span asp-validation-for="Input.Password" class="validation-error"></span>
                        </div>
                    </div>

                    <div class="checkbox-custom">
                        <input class="form-check-input" asp-for="Input.RememberMe"/>
                        <label asp-for="Input.RememberMe" class="form-label">
                            Se souvenir de moi
                        </label>
                    </div>

                    <div>
                        <button id="login-submit" type="submit" class="btn-primary-custom">Se connecter</button>
                    </div>

                    <div class="login-links">
                        <a id="forgot-password" asp-page="./ForgotPassword" class="login-link">Mot de passe oublié ?</a>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="login-link">S'inscrire
                            comme nouvel utilisateur</a>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="login-link">Renvoyer
                            l'email de confirmation</a>
                    </div>
                </form>
            </section>
        </div>

        <div class="login-external-section">
            <section>
                <h3 class="external-login-title">Connexion sociale</h3>
                <p class="external-login-description">
                    Connectez-vous avec votre plateforme sociale préférée pour une connexion plus rapide
                </p>

                @{
                    if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <div class="no-external-message">
                            <p>
                                Aucun service d'authentification externe n'est configuré. Consultez cet
                                <a href="https://go.microsoft.com/fwlink/?LinkID=532715" target="_blank">
                                    article sur la configuration de cette application ASP.NET
                                </a>
                                pour prendre en charge la connexion via des services externes.
                            </p>
                        </div>
                    }
                    else
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl"
                              method="post">
                            <div>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit"
                                            class="btn-external"
                                            name="provider"
                                            value="@provider.Name"
                                            title="Se connecter avec votre compte @provider.DisplayName">
                                        @provider.DisplayName
                                    </button>
                                }
                            </div>
                        </form>
                    }
                }
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
    <script src="~/js/loginForm.js"></script>
}