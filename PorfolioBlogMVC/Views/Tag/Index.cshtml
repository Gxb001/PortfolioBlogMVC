@model IEnumerable<Tag>

@{
    ViewData["Title"] = "Gestion des Tags";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0 text-dark">
                    <i class="bi bi-tags-fill me-2"></i>
                    Gestion des Tags
                </h1>
                <a asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="bi bi-plus-circle me-2"></i>
                    Nouveau Tag
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <div class="col-md-4 col-sm-6 mb-4">
                    <div class="card tag-card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary">
                                <i class="bi bi-tag-fill me-2"></i>
                                @Html.DisplayFor(modelItem => item.Nom)
                            </h5>
                            <div class="mt-auto">
                                <div class="btn-group w-100" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">
                                        <i class="bi bi-eye"></i> Détails
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">
                                        <i class="bi bi-pencil"></i> Modifier
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id"
                                       class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i> Supprimer
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="bi bi-tags display-1 text-muted mb-3"></i>
                    <h4 class="text-muted">Aucun tag trouvé</h4>
                    <p class="text-muted">Commencez par créer votre premier tag.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>
                        Créer un Tag
                    </a>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/tag.js"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/tag.css"/>
}
