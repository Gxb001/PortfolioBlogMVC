@model PorfolioBlogMVC.Models.ElementPortfolio

@{
    ViewData["Title"] = "Supprimer le projet";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Supprimer le Projet
                    </h2>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-danger" role="alert">
                        <h5 class="alert-heading">
                            <i class="fas fa-exclamation-triangle-fill"></i> Attention !
                        </h5>
                        <p class="mb-0">
                            Êtes-vous sûr de vouloir supprimer ce projet ? Cette action est irréversible.
                            @if (Model.Images.Any())
                            {
                                <strong>Ce projet contient @Model.Images.Count image(s) qui seront également
                                    supprimées.</strong>
                            }
                        </p>
                    </div>

                    <div class="project-preview bg-light p-4 rounded mb-4">
                        <h3 class="mb-3">Détails du projet à supprimer :</h3>

                        @if (Model.Images.Any())
                        {
                            var mainImage = Model.Images.FirstOrDefault(i => i.EstImagePrincipale) ?? Model.Images.First();
                            <div class="mb-3 text-center">
                                <img src="@mainImage.Url" alt="@Model.Titre"
                                     class="img-fluid rounded shadow" style="max-height: 300px; object-fit: cover;"/>
                            </div>
                        }

                        <dl class="row mb-0">
                            <dt class="col-sm-3">Titre</dt>
                            <dd class="col-sm-9">
                                <strong>@Model.Titre</strong>
                            </dd>

                            <dt class="col-sm-3">Description</dt>
                            <dd class="col-sm-9">
                                <div class="text-muted" style="max-height: 150px; overflow-y: auto;">
                                    @(Model.Description.Length > 300 ? Model.Description.Substring(0, 300) + "..." : Model.Description)
                                </div>
                            </dd>

                            <dt class="col-sm-3">Date de création</dt>
                            <dd class="col-sm-9">
                                <i class="fas fa-calendar"></i>
                                @Model.DateCreation.ToString("dd MMMM yyyy à HH:mm")
                            </dd>

                            <dt class="col-sm-3">Créateur</dt>
                            <dd class="col-sm-9">
                                <i class="fas fa-user"></i>
                                @Model.Createur.UserName
                            </dd>

                            @if (Model.Images.Any())
                            {
                                <dt class="col-sm-3">Images</dt>
                                <dd class="col-sm-9">
                                    <span class="badge bg-info">
                                        <i class="fas fa-images"></i> @Model.Images.Count image(s)
                                    </span>
                                </dd>
                            }

                            @if (Model.Tags.Any())
                            {
                                <dt class="col-sm-3">Tags</dt>
                                <dd class="col-sm-9">
                                    @foreach (var tag in Model.Tags)
                                    {
                                        <span class="badge"
                                              style="@(!string.IsNullOrEmpty(tag.Couleur) ? $"background-color: {tag.Couleur};" : "background-color: #6c757d;")">
                                            @tag.Nom
                                        </span>
                                    }
                                </dd>
                            }
                        </dl>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id"/>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left"></i> Annuler
                            </a>
                            <div class="d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                                    <i class="fas fa-eye"></i> Voir le projet
                                </a>
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                    <i class="fas fa-edit"></i> Modifier plutôt
                                </a>
                                <button type="submit" class="btn btn-danger btn-lg">
                                    <i class="fas fa-trash"></i> Oui, supprimer définitivement
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .project-preview {
        border: 2px solid #e9ecef;
    }

    .project-preview dl dt {
        font-weight: 600;
        color: #6c757d;
    }

    .project-preview dl dd {
        color: #333;
    }

    .badge {
        margin-right: 0.25rem;
        margin-bottom: 0.25rem;
    }
</style>