@model PorfolioBlogMVC.Models.ElementPortfolio

@{
    ViewData["Title"] = "Créer un Élément";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Portfolio.css"/>
}

<div class="create-container">
    <h1 class="create-title">Créer un Nouvel Élément</h1>
    <div class="create-card">
        <form asp-action="Create" class="create-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Titre" class="form-label"></label>
                <input asp-for="Titre" class="form-control"/>
                <span asp-validation-for="Titre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateCreation" class="form-label"></label>
                <input asp-for="DateCreation" class="form-control" type="datetime-local"/>
                <span asp-validation-for="DateCreation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateurId" class="form-label"></label>
                <select asp-for="CreateurId" class="form-control" asp-items="ViewBag.CreateurId"></select>
            </div>
            <div class="form-actions">
                <input type="submit" value="Créer" class="btn-create"/>
                <a asp-action="Index" class="btn-back">Retour à la Liste</a>
            </div>
        </form>
    </div>
</div>