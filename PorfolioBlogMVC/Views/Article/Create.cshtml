@model PorfolioBlogMVC.Models.Article

@{
    ViewData["Title"] = "Créer un article";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2><i class="bi bi-plus-circle"></i> Créer un nouvel article</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Titre" class="form-label">Titre</label>
                            <input asp-for="Titre" class="form-control" placeholder="Entrez le titre de l'article"/>
                            <span asp-validation-for="Titre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Contenu" class="form-label">Contenu</label>
                            <textarea asp-for="Contenu" class="form-control" rows="10"
                                      placeholder="Rédigez votre article ici..."></textarea>
                            <span asp-validation-for="Contenu" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImagePrincipale" class="form-label">URL de l'image (optionnel)</label>
                            <input asp-for="ImagePrincipale" class="form-control"
                                   placeholder="https://exemple.com/image.jpg"/>
                            <span asp-validation-for="ImagePrincipale" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategorieId" class="form-label">Catégorie</label>
                            <select asp-for="CategorieId" class="form-select" asp-items="ViewBag.CategorieId">
                                <option value="">-- Sélectionnez une catégorie --</option>
                            </select>
                            <span asp-validation-for="CategorieId" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Créer l'article
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Retour à la liste
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

