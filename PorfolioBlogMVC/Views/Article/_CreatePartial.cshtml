@model PorfolioBlogMVC.Models.Article

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Titre" class="form-label"></label>
        <input asp-for="Titre" class="form-control"/>
        <span asp-validation-for="Titre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Contenu" class="form-label"></label>
        <textarea asp-for="Contenu" class="form-control" rows="10"></textarea>
        <span asp-validation-for="Contenu" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImagePrincipale" class="form-label">URL de l'image</label>
        <input asp-for="ImagePrincipale" class="form-control"/>
        <span asp-validation-for="ImagePrincipale" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CategorieId" class="form-label">Catégorie</label>
        <select asp-for="CategorieId" class="form-select" asp-items="ViewBag.CategorieId">
            <option value="">-- Sélectionnez une catégorie --</option>
        </select>
        <span asp-validation-for="CategorieId" class="text-danger"></span>
    </div>

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary">Créer l'article</button>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}