@model PorfolioBlogMVC.Models.Article
@using System.Security.Claims

@{
    ViewData["Title"] = "Détails de l'article";
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
    var isAuthor = currentUserId == Model.AuteurId;
    var isAdmin = User.IsInRole("Admin");
}

<link rel="stylesheet" href="~/css/article-details.css"/>

<div class="container my-5">
    <div class="article-details">
        <!-- Header de l'article -->
        <div class="article-header">
            <h1>@Model.Titre</h1>
            <div class="article-meta">
                <span><i class="bi bi-calendar"></i> @Model.DatePublication.ToString("dd MMMM yyyy")</span>
                <span><i class="bi bi-person"></i> @Model.Auteur.UserName</span>
                @if (Model.Categorie != null)
                {
                    <span><i class="bi bi-tag"></i> @Model.Categorie.Nom</span>
                }
            </div>
        </div>

        <!-- Image principale -->
        @if (!string.IsNullOrEmpty(Model.ImagePrincipale))
        {
            <div class="article-image-container">
                <img src="@Model.ImagePrincipale" alt="@Model.Titre" class="article-image-full"/>
            </div>
        }

        <!-- Contenu de l'article -->
        <div class="article-content">
            @Html.Raw(Model.Contenu.Replace("\n", "<br/>"))
        </div>

        <!-- Actions (Edit/Delete) - Visible seulement pour l'auteur ou admin -->
        @if (isAuthor || isAdmin)
        {
            <div class="article-actions mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Modifier
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Supprimer
                </a>
            </div>
        }

        <hr class="my-5"/>

        <!-- Section Commentaires -->
        <div class="comments-section">
            <h3 class="mb-4">
                <i class="bi bi-chat-dots"></i>
                Commentaires (@Model.Commentaires.Count)
            </h3>

            <!-- Formulaire d'ajout de commentaire -->
            @if (User.Identity.IsAuthenticated)
            {
                <div class="comment-form mb-4">
                    <form asp-action="AddComment" method="post">
                        <input type="hidden" name="articleId" value="@Model.Id"/>
                        <div class="mb-3">
                            <label for="contenu" class="form-label">Ajouter un commentaire</label>
                            <textarea name="contenu" id="contenu" class="form-control" rows="4" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-send"></i> Publier le commentaire
                        </button>
                    </form>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i>
                    Vous devez être <a asp-area="Identity" asp-page="/Account/Login">connecté</a> pour commenter.
                </div>
            }

            <!-- Liste des commentaires -->
            <div class="comments-list">
                @if (Model.Commentaires.Any())
                {
                    @foreach (var commentaire in Model.Commentaires.OrderByDescending(c => c.DatePoste))
                    {
                        <div class="comment-item">
                            <div class="comment-header">
                                <div class="comment-author">
                                    <i class="bi bi-person-circle"></i>
                                    <strong>@commentaire.Auteur.UserName</strong>
                                </div>
                                <div class="comment-meta">
                                    <span class="comment-date">
                                        @commentaire.DatePoste.ToString("dd/MM/yyyy HH:mm")
                                    </span>
                                    @if (currentUserId == commentaire.AuteurId || isAdmin)
                                    {
                                        <form asp-action="DeleteComment" method="post" class="d-inline"
                                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?');">
                                            <input type="hidden" name="commentId" value="@commentaire.Id"/>
                                            <input type="hidden" name="articleId" value="@Model.Id"/>
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                            <div class="comment-body">
                                @commentaire.Contenu
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted">Aucun commentaire pour le moment. Soyez le premier à commenter !</p>
                }
            </div>
        </div>

        <!-- Retour à la liste -->
        <div class="mt-4">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>
</div>