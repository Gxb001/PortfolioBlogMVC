@model Article

@{
    ViewData["Title"] = "Supprimer l'article";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Supprimer l'article
                    </h2>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-danger" role="alert">
                        <h5 class="alert-heading">
                            <i class="bi bi-exclamation-triangle-fill"></i> Attention !
                        </h5>
                        <p class="mb-0">
                            Êtes-vous sûr de vouloir supprimer cet article ? Cette action est irréversible.
                            @if (Model.Commentaires.Any())
                            {
                                <strong>Cet article contient @Model.Commentaires.Count commentaire(s) qui seront
                                    également supprimés.</strong>
                            }
                        </p>
                    </div>

                    <div class="article-preview bg-light p-4 rounded mb-4">
                        <h3 class="mb-3">Détails de l'article à supprimer :</h3>

                        @if (!string.IsNullOrEmpty(Model.ImagePrincipale))
                        {
                            <div class="mb-3">
                                <img src="@Model.ImagePrincipale" alt="@Model.Titre" class="img-fluid rounded"
                                     style="max-height: 300px;"/>
                            </div>
                        }

                        <dl class="row mb-0">
                            <dt class="col-sm-3">Titre</dt>
                            <dd class="col-sm-9">@Model.Titre</dd>

                            <dt class="col-sm-3">Contenu</dt>
                            <dd class="col-sm-9">
                                <div class="text-muted" style="max-height: 150px; overflow-y: auto;">
                                    @(Model.Contenu.Length > 300 ? Model.Contenu.Substring(0, 300) + "..." : Model.Contenu)
                                </div>
                            </dd>

                            <dt class="col-sm-3">Date de publication</dt>
                            <dd class="col-sm-9">@Model.DatePublication.ToString("dd MMMM yyyy à HH:mm")</dd>

                            <dt class="col-sm-3">Auteur</dt>
                            <dd class="col-sm-9">
                                <i class="bi bi-person"></i> @Model.Auteur.UserName
                            </dd>

                            @if (Model.Categorie != null)
                            {
                                <dt class="col-sm-3">Catégorie</dt>
                                <dd class="col-sm-9">
                                    <span class="badge bg-primary">@Model.Categorie.Nom</span>
                                </dd>
                            }

                            <dt class="col-sm-3">Commentaires</dt>
                            <dd class="col-sm-9">
                                <span class="badge bg-info">@Model.Commentaires.Count commentaire(s)</span>
                            </dd>
                        </dl>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id"/>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="bi bi-arrow-left"></i> Annuler
                            </a>
                            <div class="d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                                    <i class="bi bi-eye"></i> Voir l'article
                                </a>
                                <button type="submit" class="btn btn-danger btn-lg">
                                    <i class="bi bi-trash"></i> Oui, supprimer définitivement
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>