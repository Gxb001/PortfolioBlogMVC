@using System.Security.Claims
@model IEnumerable<Article>

@{
    ViewData["Title"] = "Articles";
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
    var isAdmin = User.IsInRole("Admin");
}

<link rel="stylesheet" href="~/css/article.css"/>

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Articles</h1>
        @if (User.Identity.IsAuthenticated)
        {
            <a href="/Article/Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Créer un nouvel article
            </a>
        }
    </div>

    @if (!User.Identity.IsAuthenticated)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            Connectez-vous pour créer vos propres articles et commenter.
        </div>
    }

    <!-- Articles Grid -->
    <div class="article-grid" id="articleGrid">
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                var isOwner = currentUserId == item.AuteurId;
                var canEdit = isOwner || isAdmin;

                <div class="article-card">
                    @if (!string.IsNullOrEmpty(item.ImagePrincipale))
                    {
                        <img src="@item.ImagePrincipale" alt="Image pour @item.Titre" class="article-image"/>
                    }
                    else
                    {
                        <div class="article-image-placeholder">
                            <i class="bi bi-image"></i>
                        </div>
                    }

                    <div class="article-card-body">
                        <h2 class="article-title">@item.Titre</h2>

                        <p class="article-excerpt">
                            @if (item.Contenu.Length > 150)
                            {
                                @item.Contenu.Substring(0, 150)<text>...</text>
                            }
                            else
                            {
                                @item.Contenu
                            }
                        </p>

                        <div class="article-meta">
                            <span><i class="bi bi-calendar"></i> @item.DatePublication.ToString("dd/MM/yyyy")</span>
                            <span><i class="bi bi-person"></i> @(item.Auteur?.UserName ?? "Anonyme")</span>
                            @if (item.Categorie != null)
                            {
                                <span><i class="bi bi-tag"></i> @item.Categorie.Nom</span>
                            }
                            <span><i class="bi bi-chat"></i> @item.Commentaires.Count commentaire(s)</span>
                        </div>

                        <div class="article-actions">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                <i class="bi bi-eye"></i> Détails
                            </a>

                            @if (canEdit)
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil"></i> Modifier
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Supprimer
                                </a>
                            }
                        </div>

                        @if (isOwner)
                        {
                            <span class="badge bg-success article-owner-badge">Votre article</span>
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-warning text-center">
                    <i class="bi bi-exclamation-triangle"></i>
                    Aucun article disponible pour le moment.
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/article.js"></script>
}