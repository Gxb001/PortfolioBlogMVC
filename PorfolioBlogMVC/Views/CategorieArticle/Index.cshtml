@model IEnumerable<CategorieArticle>

@{
    ViewData["Title"] = "Gestion des Catégories";
}

@section Styles {
    <link rel="stylesheet" href="~/css/categorieArticle.css" asp-append-version="true"/>
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0 text-dark">
                        <i class="bi bi-tags-fill me-2 text-primary"></i>
                        Catégories d'Articles
                    </h1>
                    <p class="text-muted mt-1">Gérez les catégories de vos articles de blog</p>
                </div>
                <a asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="bi bi-plus-circle me-2"></i>
                    Nouvelle Catégorie
                </a>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="bi bi-tags display-1 text-muted mb-3"></i>
                    <h4 class="text-muted">Aucune catégorie trouvée</h4>
                    <p class="text-muted">Commencez par créer votre première catégorie.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>
                        Créer la première catégorie
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card categorie-card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex align-items-center mb-3">
                                <div class="categorie-icon me-3">
                                    <i class="bi bi-tag-fill text-primary"></i>
                                </div>
                                <h5 class="card-title mb-0 flex-grow-1">@Html.DisplayFor(modelItem => item.Nom)
                                </h5>
                            </div>
                            <div class="card-text text-muted small mb-3">
                                @if (item.Articles != null && item.Articles.Any())
                                {
                                    <span>@item.Articles.Count article@(item.Articles.Count > 1 ? "s" : "") associé@(item.Articles.Count > 1 ? "s" : "")</span>
                                }
                                else
                                {
                                    <span>Aucun article associé</span>
                                }
                            </div>
                            <div class="mt-auto">
                                <div class="btn-group w-100" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">
                                        <i class="bi bi-eye me-1"></i>
                                        Détails
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">
                                        <i class="bi bi-pencil me-1"></i>
                                        Modifier
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id"
                                       class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash me-1"></i>
                                        Supprimer
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/categorieArticle.js" asp-append-version="true"></script>
}
