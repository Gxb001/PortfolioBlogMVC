@model CategorieArticle

@{
    ViewData["Title"] = "Supprimer la Catégorie";
}

@section Styles {
    <link rel="stylesheet" href="~/css/categorieArticle.css" asp-append-version="true"/>
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-action="Index">
                            <i class="bi bi-tags me-1"></i>
                            Catégories
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Supprimer</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6 mx-auto">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <h5 class="mb-0">Confirmer la Suppression</h5>
                    </div>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-circle me-2"></i>
                        <strong>Attention !</strong> Cette action est irréversible. Êtes-vous sûr de vouloir supprimer
                        cette catégorie ?
                    </div>

                    <div class="mb-4">
                        <h6 class="fw-bold text-muted mb-3">Détails de la catégorie à supprimer :</h6>
                        <div class="border rounded p-3 bg-light">
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-tag me-2 text-primary"></i>
                                <span class="fw-bold">@Html.DisplayFor(model => model.Nom)</span>
                            </div>
                            @if (Model.Articles != null && Model.Articles.Any())
                            {
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-file-text me-2 text-warning"></i>
                                    <span class="text-muted">
                                        @Model.Articles.Count article@(Model.Articles.Count > 1 ? "s" : "") associé@(Model.Articles.Count > 1 ? "s" : "")
                                        - <strong class="text-danger">Les articles ne seront pas supprimés</strong>
                                    </span>
                                </div>
                            }
                            else
                            {
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-info-circle me-2 text-info"></i>
                                    <span class="text-muted">Aucun article associé</span>
                                </div>
                            }
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id"/>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">
                                <i class="bi bi-arrow-left me-2"></i>
                                Annuler
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-trash me-2"></i>
                                Supprimer Définitivement
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/categorieArticle.js" asp-append-version="true"></script>
}
