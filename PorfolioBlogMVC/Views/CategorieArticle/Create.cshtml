@model CategorieArticle

@{
    ViewData["Title"] = "Créer une Nouvelle Catégorie";
}

@section Styles {
    <link rel="stylesheet" href="~/css/categorieArticle.css" asp-append-version="true"/>
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-action="Index">
                            <i class="bi bi-tags me-1"></i>
                            Catégories
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Créer</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-plus-circle-fill me-2"></i>
                        <h5 class="mb-0">Nouvelle Catégorie</h5>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-4">
                            <label asp-for="Nom" class="form-label fw-bold">
                                <i class="bi bi-tag me-2 text-primary"></i>
                                Nom de la Catégorie
                            </label>
                            <input asp-for="Nom" class="form-control form-control-lg"
                                   placeholder="Entrez le nom de la catégorie" required/>
                            <div class="invalid-feedback">
                                Le nom de la catégorie est requis.
                            </div>
                            <span asp-validation-for="Nom" class="text-danger small"></span>
                            <div class="form-text">
                                Choisissez un nom descriptif pour votre catégorie d'articles.
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">
                                <i class="bi bi-x-circle me-2"></i>
                                Annuler
                            </a>
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle me-2"></i>
                                Créer la Catégorie
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/categorieArticle.js" asp-append-version="true"></script>
}
